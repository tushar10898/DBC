            'BAO': ['75.7P2', '77.4-2P', '80.4E1'],
            'CAS': ['77.4P3', '77.4-1P', '77.4-2P', '77.4P6'],
            'CHE': ['107P2'],
            'DAB': ['64.6', '62.2P2'],
            'FUJ': ['107P2'],
